{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./lib",
    "composite": true
  },
  "include": ["./src"]
}
